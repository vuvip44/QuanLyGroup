@model QuanLy.ViewModel.Response.PageResponse<IEnumerable<QuanLy.ViewModel.Response.User.UserViewModel>>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New User</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Account</th>
            <th>Phone Number</th>
            <th>Order Number</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Data != null)
        {
            foreach (var user in Model.Data)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Account</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.OrderNumber</td>
                    <td>@user.Gender</td>

                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<!-- PhÃ¢n trang -->
<div>
    <p>Page @Model.Page of @Model.TotalPage (Total: @Model.TotalElement users)</p>
    <nav>
        <ul class="pagination">
            <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page - 1)"
                    asp-route-pageSize="@Model.PageSize">Previous</a>
            </li>
            <li class="page-item @(Model.Page == Model.TotalPage ? "disabled" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@(Model.Page + 1)"
                    asp-route-pageSize="@Model.PageSize">Next</a>
            </li>
        </ul>
    </nav>
</div>